{{!-- Form to add a record to the table  --}}
<h2>Adding a New Order </h2>
<p>To add a new product to your order, please enter its information below and click 'Submit'!</p>
    <form id="add-productSales-form" method="POST" action="/add-productSales">
        <label for="input-salesInvoice">Sales Invoice:</label>
        <select name="input-salesInvoice" id="input-salesInvoice" required>
            {{#each salesInvoices}}
            <option value="{{this.idSalesInvoice}}">{{this.idSalesInvoice}} | {{this.orderQuantity}} | {{this.productName}}</option>
            {{/each}}
        </select>

        <label for="input-idProduct">Product:</label>
        <select name="input-idProduct" id="input-idProduct" required>
            {{#each products}}
            <option value="{{this.idProduct}}">{{this.productName}}</option>
            {{/each}}
        </select>


        <input type="submit" value="Add Order" />
    </form>
</section>