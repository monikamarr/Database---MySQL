{{!-- Form to add a record to the table  --}}
<div>
<h2>Adding Customer </h2>
<p>To add a new customer, please enter their information below and click 'Submit'</p>
<form id="add-customer-form-ajax">
    <label for="input-firstName">First Name: </label>
    <input type="text" name="input-firstName" id="input-firstName">
    
    <label for="input-lastName">Last Name: </label>
    <input type="text" name="input-lastName" id="input-lastName">

    <label for="input-address">Address: </label>
    <input type="text" name="input-address" id="input-address" placeholder="0000 Street Name, City, State, Zip Code">


    <input type="submit">
</form>
</div>
