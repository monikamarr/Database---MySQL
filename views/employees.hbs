<!-- index.hbs -->

{{!-- Create customer table --}}
<h2>​𝔼𝕞𝕡𝕝𝕠𝕪𝕖𝕖𝕤​</h1>
<p>Meet Our Executive Team:</p>
<img src="/img/img.jpeg" alt="The employees of Tegridy Grange">
<br>
<table id="employees-table">

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        {{#each data}}
        <tr data-value="{{this.idEmployee}}">
            <td>{{this.idEmployee}}</td>
            <td>{{this.firstName}}</td>
            <td>{{this.lastName}}</td>
            <td>{{this.email}}</td>
            <td>{{this.phoneNumber}}</td>
            <td><button onclick="deleteEmployee({{this.idEmployee}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>

<!-- /views/index.hbs -->
<div>
{{!-- Form to add a record to the table  --}}
<p>To add a new employee, please enter their information below and click 'Submit'!</p>
<form id="add-employee-form-ajax">
    <label for="input-firstName">First Name: </label>
    <input type="text" name="input-firstName" id="input-firstName" required>
    
    <label for="input-lastName">Last Name: </label>
    <input type="text" name="input-lastName" id="input-lastName" required>

    <label for="input-email">Email Address: </label>
    <input type="email" name="input-email" id="input-email" placeholder="your-email@email.com" required>

    <label for="input-phoneNumber">Phone Number: </label>
    <input type="text" name="input-phoneNumber" id="input-phoneNumber" placeholder="000-000-0000" required>

    <input type="submit">
</form>
</div>
{{!-- Embed our javascript to handle the DOM manipulation and AJAX request --}}
<script src="./js/add_employee.js"></script> 
<script src="./js/delete_employee.js"></script>
