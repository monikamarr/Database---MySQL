{{!-- Form to add a record to the table  --}}
<h2>Adding a New Vendor</h2>
<p>To add a new vendor, please enter their information below and click 'Submit'!</p>
<form id="add-vendor-form-ajax">
    <label for="input-vendorName">Vendor's Name: </label>
    <input type="text" name="input-vendorName" id="input-vendorName">
    
    <label for="input-vendorAddress">Vendor's Address: </label>
    <input type="text" name="input-vendorAddress" id="input-vendorAddress">

    <input type="submit">
</form>

{{!-- Embed our javascript to handle the DOM manipulation and AJAX request --}}
